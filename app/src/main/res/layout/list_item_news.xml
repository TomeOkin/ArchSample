<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:background="@drawable/news_state_bg"
    >

  <TextView
      android:id="@+id/newsTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      tools:text="\u5728\u7ebf JSON \u8f6c POJO \uff0c\u8d85\u7b80\u5355\u5b9e\u7528"
      />

  <!--<TextView-->
  <!--android:id="@+id/url"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="wrap_content"-->
  <!--android:textSize="12sp"-->
  <!--tools:text="https://github.com/joelittlejohn/jsonschema2pojo"-->
  <!--/>-->

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      >

    <TextView
        android:id="@+id/newsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:paddingBottom="2dp"
        tools:text="Android"
        />

    <TextView
        android:id="@+id/publishDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/newsType"
        android:layout_toRightOf="@id/newsType"
        android:padding="2dp"
        android:paddingBottom="2dp"
        tools:text="2016-04-27 12:04:15"
        />

    <ImageView
        android:id="@+id/collect_Iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/favour_outline_64"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

  </RelativeLayout>

</LinearLayout>