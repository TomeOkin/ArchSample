<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/news_state_bg"
    >

    <TextView
        android:id="@+id/collectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="\u5728\u7ebf JSON \u8f6c POJO \uff0c\u8d85\u7b80\u5355\u5b9e\u7528"
        />

    <TextView
        android:id="@+id/collectUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="https://github.com/joelittlejohn/jsonschema2pojo"
        />

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        android:paddingTop="4dp"
        app:atg_textSize="12sp"
        style="@style/TagGroup" />

</LinearLayout>